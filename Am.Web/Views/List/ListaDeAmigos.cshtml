@model List<Base.Domain.Entities.EAmigos> 
@{}

<h3>Lista de Amigos</h3>

@using (Html.BeginForm("selecionar", "list", FormMethod.Post))
{

<table class="table table-striped">
    <thead>
        <tr>
            <td>#</td>
            <td>Nome</td>
            <td>Sobrenome</td>
            <td>Idade</td>


        </tr>
    </thead>

    <tbody>
        @foreach (var eAmigos in Model)
{
<tr>
    <td>
        <input type="checkbox" name="Selected" value="@eAmigos.Id" />
    </td>
    <td>@eAmigos.Nome</td>
    <td>@eAmigos.Sobrenome</td>
    <td>@eAmigos.Dn</td>
</tr>
}
    </tbody>
</table>
<button type="submit">
    Enviar Selecionados
</button>
}